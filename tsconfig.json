{
	"compilerOptions": {
		"target": "ESNext",
		"module": "commonjs",
		"lib": ["ESNext"],
		"resolveJsonModule": true,
		"sourceMap": true,
		"outDir": "./dist",
		"strict": true,
		"noImplicitAny": true,
		"moduleResolution": "node",
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true
	},
	"include": ["src"],
	"exclude": ["node_modules", "dist", "**/*.test.ts"]
}
